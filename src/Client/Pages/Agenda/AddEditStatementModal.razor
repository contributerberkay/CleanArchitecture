@inject Microsoft.Extensions.Localization.IStringLocalizer<AddEditStatementModal> _localizer

<EditForm Model="@AddEditStatementModel" OnValidSubmit="SaveAsync">
    <FluentValidationValidator @ref="_fluentValidationValidator" />
    <MudDialog>
        <TitleContent>
            @{
                if (AddEditStatementModel.Id == 0)
                {
                    <MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
                        @_localizer["Add Statement"]
                    </MudText>
                }
                else
                {
                    <MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.Update" Class="mr-3 mb-n1" />
                        @_localizer["Update Statement"]
                    </MudText>
                }
            }
        </TitleContent>
        <DialogContent>
            <MudGrid>
                @if (AddEditStatementModel.Id != 0)
                {
                    <MudItem xs="12" md="6">
                        <MudTextField Disabled For="@(() => AddEditStatementModel.Id)" @bind-Value="AddEditStatementModel.Id" Label="@_localizer["Id"]" />
                    </MudItem>
                }
                <MudItem xs="12" md="6">
                    <MudTextField For="@(() => AddEditStatementModel.Body)" @bind-Value="AddEditStatementModel.Body" Label="@_localizer["Name"]" />
                </MudItem>
                <MudItem xs="12" md="6">
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudAutocomplete T="int" Label="@_localizer["Topic"]" 
                    For="@(() => AddEditStatementModel.TopicId)" @bind-Value="AddEditStatementModel.TopicId" 
                    ResetValueOnEmptyText="true" SearchFunc="@SearchTopics" 
                    Variant="Variant.Filled" 
                    ToStringFunc="@(i => _topics.FirstOrDefault(b => b.Id == i)?.Name ?? string.Empty)" 
                    OffsetY="true" />
                </MudItem>
                <MudItem xs="12" md="6">
                    
                </MudItem>
                @if (AddEditStatementModel.Id == 0)
                {
                    <MudItem xs="12" md="6">
                        
                    </MudItem>
                }
                else
                {
                    <MudItem xs="12" md="6">
                        
                    </MudItem>
                }
                <MudItem xs="12" md="6">
                    <MudItem>
                        
                    </MudItem>
                </MudItem>
            </MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton DisableElevation Variant="Variant.Filled" OnClick="Cancel">@_localizer["Cancel"]</MudButton>
            @if (AddEditStatementModel.Id != 0)
            {
                <MudButton DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Disabled="@(!Validated)" Color="Color.Secondary">@_localizer["Update"]</MudButton>
            }
            else
            {
                <MudButton DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Disabled="@(!Validated)" Color="Color.Success">@_localizer["Save"]</MudButton>
            }
        </DialogActions>
    </MudDialog>
</EditForm>